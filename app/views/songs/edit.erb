<form action="/songs/<%=@song.slug%>" method="post">
    <input type="hidden" name="_method" value="patch">
    Song Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"><br><br>

    Artist: <br>
    <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"><br><br>

    Genres: <br>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%"checked" if @song.genres.include? genre%>><%= genre.name %><br>
    <% end %><br>

    <input type="submit" value="Save">
</form>