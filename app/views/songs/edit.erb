<h1>Edit Song</h1>

<form action="/songs/<%= @song.slug %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
   
   <label for="song_name">Name</label>
   <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>"><br>
   
   <label for="artist_name">Artist Name</label>
   <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"><br>
    
    <h2>Genres</h2>
    <% @genres.each do |genre| %>
       <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
  
  
  
    <input type="submit" value="Save">
  </form>